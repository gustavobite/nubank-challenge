<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.ufs.hiring.nubankchallenge">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".App"
        android:theme="@style/NuChallenge.NoActionBar">

        <activity
            android:name=".transaction.PurchaseDetailsActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".notice.NoticeActivity"
            android:screenOrientation="portrait"
            />

        <activity
            android:name=".chargeback.ChargebackActivity"
            android:screenOrientation="portrait"
            />
    </application>


</manifest>