<?xml version="1.0" encoding="utf-8"?>
<br.ufs.hiring.nubankchallenge.chargeback.CreditcardActionsView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lockpadView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/eight_dips">

        <TextView
            android:id="@+id/lockpadLabel"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:lines="2"
            android:drawableLeft="@drawable/ic_chargeback_lock"
            android:drawablePadding="@dimen/eight_dips"
            android:gravity="center_vertical"
            android:padding="@dimen/sixteen_dips"
            android:text="@string/message_cardblocked"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/red_blocked"
            android:visibility="visible" />

        <ProgressBar
            android:id="@+id/lockOperationLoading"
            style="?android:attr/progressBarStyle"
            android:layout_width="@dimen/twentyfour_dips"
            android:layout_height="@dimen/twentyfour_dips"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/sixteen_dips"
            android:visibility="gone" />
    </LinearLayout>
</br.ufs.hiring.nubankchallenge.chargeback.CreditcardActionsView>